<?xml version="1.0" encoding="utf-8" standalone="no" ?>
<modDesc descVersion="42">
	<author>StjerneIdioten - Original 2015 version by Marhu</author>
	<version>1.0.0.0</version> 
	<title>
		<en>AdjustableMirrors</en>       
    </title>
    <description>
        <en>Adjustable Mirrors</en>
 	</description>
    <multiplayer supported="false"/>   
	<iconFilename>store.dds</iconFilename>

	<l10n filenamePrefix="modDesc_l10n"> 
		<text name="input_AM_AdjustMirrors">
			<en>AM: Adjust Mirrors on/off</en>
		</text>
		<text name="input_AM_SwitchMirror">
			<en>AM: Change mirror</en>
		</text>
		<text name="input_AM_TiltUp">
			<en>AM: Tilt the mirror up</en>
		</text>
		<text name="input_AM_TiltDown">
			<en>AM: Tilt the mirror down</en>
		</text>
		<text name="input_AM_TiltLeft">
			<en>AM: Tilt the mirror left</en>
		</text>
		<text name="input_AM_TiltRight">
			<en>AM: Tilt the mirror right</en>
		</text>
	</l10n>

	<actions>
		<action name="AM_AdjustMirrors" category="VEHICLE"/>
		<action name="AM_SwitchMirror" 	category="VEHICLE"/>
		<action name="AM_TiltUp" 		category="VEHICLE"/>
		<action name="AM_TiltDown" 		category="VEHICLE"/>
		<action name="AM_TiltLeft" 		category="VEHICLE"/>
		<action name="AM_TiltRight" 	category="VEHICLE"/>
	</actions>

	<inputBinding>
		<actionBinding action="AM_AdjustMirrors">
			<binding device="KB_MOUSE_DEFAULT" input="KEY_rctrl KEY_KP_0" axisComponent="+" inputComponent="+" index="1"/>
		</actionBinding>
		<actionBinding action="AM_SwitchMirror">
			<binding device="KB_MOUSE_DEFAULT" input="KEY_rctrl KEY_KP_5" axisComponent="+" inputComponent="+" index="1"/>
		</actionBinding>
		<actionBinding action="AM_TiltUp">
			<binding device="KB_MOUSE_DEFAULT" input="KEY_rctrl KEY_KP_8" axisComponent="+" inputComponent="+" index="1"/>
		</actionBinding>
		<actionBinding action="AM_TiltDown">
			<binding device="KB_MOUSE_DEFAULT" input="KEY_rctrl KEY_KP_2" axisComponent="+" inputComponent="+" index="1"/>
		</actionBinding>
		<actionBinding action="AM_TiltLeft">
			<binding device="KB_MOUSE_DEFAULT" input="KEY_rctrl KEY_KP_4" axisComponent="+" inputComponent="+" index="1"/>
		</actionBinding>
		<actionBinding action="AM_TiltRight">
			<binding device="KB_MOUSE_DEFAULT" input="KEY_rctrl KEY_KP_6" axisComponent="+" inputComponent="+" index="1"/>
		</actionBinding>
	</inputBinding>

	<extraSourceFiles>
        <sourceFile filename="AdjustableMirrors_Register.lua" />
    </extraSourceFiles>  

</modDesc>